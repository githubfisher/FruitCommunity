/**index.wxss**/
.front {
  width: 100%;
  background-color: #e22319;
  padding: 20px 0;
  text-align: center;
}
.front image {
  width: 190px;
  height: 60px;
}
.search-bar {
  background-color: #fff;
  border-radius: 30px;
  margin: 10px 20px 0 20px;
  line-height: 14px;
  padding: 5px 0;
}
#search-icon{
  float: left;
  padding:5px 0 0 100px;
}
.search-bar input {
  font-size: 12px;
  color:#b8b8b8;
  width: 60%;
  text-align: left;
  padding-left:5px;
}
.middle image {
  width: 50px;
  height: 50px;
}
.middle view{
  float: left;
  width:56px;
  font-size:14px;
  color: #888;
  padding: 10px 10px;
}
.special{
  width: 100%;
  text-align: center;
}
.product-item{
  margin: 20px 20px;
  box-shadow: 0 0 5px 2px #eee;
}
.special-head{
  color: #888;
  padding: 10px 0;
}
.special-p-presale-price{
  color: #b2b2b2;
  font-size:11px;
  text-decoration: line-through;
  padding:  0 4px
}
.special-sale{
   line-height: 20px;
  font-size: 11px;
  color: #888;
}
.special-button{
  width: 7em;
  height: 2em;
  font-size: 13px;
  color: #fff;
  background-color: #e22319;
  line-height: 26px;
  float: left;
}
.special-sale-shape-bk{
  width: 5em;
  height:4px;
  float:right;
  margin:10px 36px 8px 6px;
  border: 1px #ebebeb solid;
  background-color: #ebebeb;
  border-radius: 3px;
}
.special-sale-shape{
  background-color: #e64340;
  border: 1px #e64340 solid;
  border-bottom-left-radius: 3px;
  border-top-left-radius: 3px;
  height:4px;
}